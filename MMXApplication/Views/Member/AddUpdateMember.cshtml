@model MMXModelsLib.MemberModel
@{
    Layout = null;
}
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <div class="accountdiv">
        <fieldset class="accountfieldset">
            <legend>Contact</legend>
            <div class="editor-label">
                @Html.LabelFor(model => model.FirstName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.FirstName)
                @Html.ValidationMessageFor(model => model.FirstName)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.MiddleName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.MiddleName)
                @Html.ValidationMessageFor(model => model.MiddleName)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.LastName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.LastName)
                @Html.ValidationMessageFor(model => model.LastName)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Phone)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Phone)
                @Html.ValidationMessageFor(model => model.Phone)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.LicenseNumber)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.LicenseNumber)
                @Html.ValidationMessageFor(model => model.LicenseNumber)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.DateOfBirth)
            </div>
            <div class="editor-field">
                @{ if (Model.DateOfBirth == DateTime.MinValue) {
                    @Html.TextBoxFor(model => model.DateOfBirth, new { @Value = "" })
                   } else {
                    @Html.EditorFor(model => model.DateOfBirth)
                   }
                }
                @Html.ValidationMessageFor(model => model.DateOfBirth)
            </div>
        </fieldset>
    </div>
    <div class="accountdiv">
        <fieldset class="accountfieldset">
            <legend>Address</legend>
            <div class="editor-label">
                @Html.LabelFor(model => model.Address.StreetAddress1)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Address.StreetAddress1)
                @Html.ValidationMessageFor(model => model.Address.StreetAddress1)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Address.StreetAddress2)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Address.StreetAddress2)
                @Html.ValidationMessageFor(model => model.Address.StreetAddress2)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Address.City)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Address.City)
                @Html.ValidationMessageFor(model => model.Address.City)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Address.State)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Address.State)
                @Html.ValidationMessageFor(model => model.Address.State)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Address.ZipCode)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Address.ZipCode)
                @Html.ValidationMessageFor(model => model.Address.ZipCode)
            </div>
            <div>
                @Html.HiddenFor(model => model.MemberKey)
                @Html.HiddenFor(model => model.AddressKey)
                @Html.HiddenFor(model => model.MemberKey)
            </div>
            <p>
                <input type="submit" value="Save" />
            </p>
        </fieldset>
    </div>

}
<div style="clear:left;" >
    @Html.ActionLink("Back", "MemberList", "Member")
</div>
