@model MMXModelsLib.MotorcycleModel


@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Add Update Motorcycle</legend>

        
        <div class="editor-label">
            @Html.LabelFor(model => model.Brand)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Brand)
            @Html.ValidationMessageFor(model => model.Brand)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CycleModel)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CycleModel)
            @Html.ValidationMessageFor(model => model.CycleModel)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Displacement)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Displacement)
            @Html.ValidationMessageFor(model => model.Displacement)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.RidingNumber)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RidingNumber)
            @Html.ValidationMessageFor(model => model.RidingNumber)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Year)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Year)
            @Html.ValidationMessageFor(model => model.Year)
            @Html.HiddenFor(model => model.MotorcycleKey)
            @Html.HiddenFor(model => model.MemberKey)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "MotorcycleList", "Member")
</div>
