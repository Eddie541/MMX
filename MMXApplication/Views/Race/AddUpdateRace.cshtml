@model MMXModelsLib.RaceModel
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Race</legend>
        <div>
            <span>Track:
                @if (Model.Tracks != null) {               
                    @Html.DropDownListFor(m => m.TrackKey, new SelectList(Model.Tracks, "TrackKey", "TrackName"))
                }
            </span>
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.RaceName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RaceName)
            @Html.ValidationMessageFor(model => model.RaceName)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.RaceDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RaceDate)
            @Html.ValidationMessageFor(model => model.RaceDate)
            @Html.HiddenFor(model => model.RaceKey)
            @Html.HiddenFor(model => model.TrackKey)
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Back", "RaceSchedule")
</div>
