@model MMXModelsLib.TrackModel
@{
    Layout = null;
}
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <div class="accountdiv">
        <fieldset class="accountfieldset">
            <legend>Track</legend>
            <div class="editor-label">
                @Html.LabelFor(model => model.TrackName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.TrackName)
                @Html.ValidationMessageFor(model => model.TrackName)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.ContactName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.ContactName)
                @Html.ValidationMessageFor(model => model.ContactName)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Phone)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Phone)
                @Html.ValidationMessageFor(model => model.Phone)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.WebAddress)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.WebAddress)
                @Html.ValidationMessageFor(model => model.WebAddress)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.EmailAddress)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.EmailAddress)
                @Html.ValidationMessageFor(model => model.EmailAddress)
            </div>
        </fieldset>
    </div>
    <div class="accountdiv">
        <fieldset class="accountfieldset">
            <legend>Address</legend>
            <div class="editor-label">
                @Html.LabelFor(model => model.Address.StreetAddress1)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Address.StreetAddress1)
                @Html.ValidationMessageFor(model => model.Address.StreetAddress1)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Address.StreetAddress2)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Address.StreetAddress2)
                @Html.ValidationMessageFor(model => model.Address.StreetAddress2)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Address.City)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Address.City)
                @Html.ValidationMessageFor(model => model.Address.City)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Address.State)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Address.State)
                @Html.ValidationMessageFor(model => model.Address.State)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Address.ZipCode)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Address.ZipCode)
                @Html.ValidationMessageFor(model => model.Address.ZipCode)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Address.Latitude)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Address.Latitude)
                @Html.ValidationMessageFor(model => model.Address.Latitude)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Address.Longitude)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Address.Longitude)
                @Html.ValidationMessageFor(model => model.Address.Longitude)
                @Html.HiddenFor(model => model.TrackKey)
                @Html.HiddenFor(model => model.AddressKey)
                @Html.HiddenFor(model => model.Address.AddressKey)
            </div>
        </fieldset>
    </div>
    <div style="float: left; clear: left; margin: 0.5em; padding: 0.5em;">
        <p>
            <input type="submit" value="Save" />
        </p>
        <p>
            @Html.ActionLink("Back", "RaceSchedule")
        </p>
    </div>             
}
